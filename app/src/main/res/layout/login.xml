<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/bt_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@color/bt_bg_gris"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_medium"
            android:text="@string/msg_login"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/borde_item_black"
            android:ems="10"
            android:hint="@string/hint_usuario"
            android:inputType="textPersonName"
            android:padding="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/borde_item_black"
            android:ems="10"
            android:hint="@string/hint_pass"
            android:inputType="textPassword"
            android:padding="@dimen/margin_medium"
            android:paddingStart="@dimen/margin_medium" />

        <Button
            android:id="@+id/btnLogin"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_medium"
            android:background="@drawable/borde_item"
            android:backgroundTint="@color/bt_green"
            android:text="@string/btn_login"
            android:textColor="@color/bt_white"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>